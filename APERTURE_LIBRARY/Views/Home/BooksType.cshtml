<div class="bg-secondary text-center rounded p-4">
    <h2>Books Type</h2>
    <table class="table table-hover" id="MyTable">
        <tr>
            <th>Genero</th>
            <th>Categoria</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Genero</td>
                <td>@item.Categoria</td>
                <td><a href="~/home/BooksTypeForm?IdTL=@item.IdTL" class="btn btn-info">Editar</a></td>
                <td><a href="~/home/EliminarTL?IdTL=@item.IdTL" class="btn btn-danger">Eliminar</a></td>
            </tr>
        }
    </table>
    <a href="~/home/BooksTypeForm" type="button" class="btn btn-dark">Añadir Tipo de Libro</a>
</div> 